BoxLayout:
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.3
        Button:
            text: "List required"
            on_press: app.clear_all()
            on_release: app.on_click_required()
        Button:
            text: "List completed"
            on_press: app.clear_all()
            on_release: app.on_click_completed()
        Label:
            text: "Add new book..."
            canvas.before:
                Color:
                    rgba:0.9, 0, 0.9 ,1
                Rectangle:
                    pos: self.pos
                    size:self.size
        Label
            text: "Title:"
        TextInput
            id: input_title
            text:""
            write_tab: False
        Label
            text: "Author:"
        TextInput
            id: input_author
            text:""
            write_tab: False
        Label
            text: "Pages:"
        TextInput
            id: input_pages
            text:""
            write_tab: False
        Button:
            text: "Add items"
            on_release: app.save_book(input_title.text, input_author.text, input_pages.text)
        Button:
            text: "Clear"
            on_press:app.clear_fields()
    BoxLayout:
        orientation: "vertical"
        Label
            id: display_pages
            text: ""
            size_hint: 1,0.15
        BoxLayout
            orientation: "vertical"
            id: book_list_box
            size_hint: 1,0.7

        Label
            id: display_text
            text:""
            size_hint:1,0.15