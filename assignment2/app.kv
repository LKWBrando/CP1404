# create your Kivy layout in the kv language here
BoxLayout:
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.3
        Button:
            text: "List required"
            on_press: app.clear_all()
            on_release: app.on_required()
        Button:
            text: "List completed"
            on_press: app.clear_all()
            on_release: app.on_completed()
        Button:
            text: "Add new book..."
            on_release: app.save_book(input_title.text, input_author.text, input_pages.text)
        Label
            text: "Title:"
        TextInput
            id: input_title
            text:""
        Label
            text: "Author:"
        TextInput
            id: input_author
            text:""
        Label
            text: "Pages:"
        TextInput
            id: input_pages
            text:""
        Button:
            text: "Add items"
        Button:
            text: "Clear"
            on_press:app.clear_fields()
    BoxLayout:
        orientation: "vertical"
        Label
            id: display_pages
            text: ""
            size_hint: 1,0.2
        BoxLayout
            orientation: "vertical"
            id: entriesBox
            size_hint: 1,0.6
        Label
            id: display_text
            text:""
            size_hint:1,0.2